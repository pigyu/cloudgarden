<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.windowgarden.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <application
        android:name="com.windowgarden.app.util.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/cloudgarden_logo"
        android:label="@string/app_name"
        android:logo="@drawable/my_head"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.windowgarden.app.activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.windowgarden.app.activity.MainActivity"
            android:icon="@drawable/my_head"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.windowgarden.app.activity.PlantOperatorActivity">        
        </activity>
        
        <activity
            android:name="com.windowgarden.app.activity.ChatActivity">        
        </activity>
        
        <activity
            android:name="com.windowgarden.app.activity.RegisterActivity" >
        </activity>
        
    </application>

</manifest>